# Required Environment Variables
KNOWLEDGE_BASE_ID=your-knowledge-base-id
MODEL_ARN=arn:aws:bedrock:us-east-1::foundation-model/your-model-arn
ALLOWED_ORIGIN=https://your-domain.com

# Optional Environment Variables (with defaults)
AWS_REGION=us-east-1
TEMPERATURE=0.2
MAX_TOKENS=1024
MAX_QUERY_LENGTH=5000
MAX_CONTEXT_MESSAGES=10
MIN_TIMEOUT_SECONDS=5.0

# Citation Validation (Phase 3)
MIN_CITATION_SCORE=0.7
MAX_CITATIONS=5

# LLM Guard Configuration (Optional - requires llm-guard package)
LLM_GUARD_ENABLED=false
LLM_GUARD_THRESHOLD=0.5

# Phase 2: Query Optimization
QUERY_OPTIMIZATION_ENABLED=true
QUERY_EXPANSION_ENABLED=true
HYBRID_SEARCH_ENABLED=true
QUERY_DECOMPOSITION_ENABLED=true
MAX_QUERY_EXPANSIONS=3

